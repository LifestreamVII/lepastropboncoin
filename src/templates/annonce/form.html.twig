{{ form_start(form) }}

    {% if form_errors(form) %}
        <div class="alert">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <div>
        {{ form_row(form.titre,
            {
                'attr': {
                    'class': 'border',
                    'placeholder': 'Titre'
                },
                'label': false
            })
        }}
    </div>

    <div>
        {{ form_row(form.prix,
            {
                'attr': {
                    'class': 'border',
                    'placeholder': 'Prix'
                },
                'label': false
            })
        }}
    </div>

    <div>
        {{ form_row(form.description,
            {
                'attr': {
                    'class': 'border',
                    'placeholder': 'Description'
                },
                'label': false
            })
        }}
    </div>

    <div>
        {{ form_row(form.tags,
            {
                'attr': {
                'class': 'border',
                'placeholder': 'Selectionner les tags...'
            },
                'label': false
            })
        }}
    </div>

    <div>
        {{ form_row(form.file,
                {
                'label': "Upload"
                }
            )
        }}
    </div>

    <div class="d-grid">
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}