{% extends "layout.html.twig" %}

{% block title %}Toutes les annonces{% endblock %}
{% block content %}
    <div class="row align-left mt-m">
        <div class="col-12">
            <div>
                <span class="align-left h5">
                    Toutes les annonces :
                </span>
            </div>
            {% for category in categories %}
            <div class="category">
                    <h3>{{ category.libelle }}</h3>
                    <div class="list">
                        {% for annonce in category.getAnnonces() %}
                            {% include ('annonce/annonce-sm.html.twig') %}
                        {% endfor %}
                    </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}