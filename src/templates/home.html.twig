{# templates/home.html.twig #}
{% extends "layout.html.twig" %}

{% block title %}Accueil{% endblock %}
{% block content %}
    {% if message is defined %}
        <p class="mt-m mb-m align-center">{{ message }}</p>
    {% endif %}
    {% if app.user is not null %}
        <h1>Bienvenue, {{ app.user.username }}.</h1>
    {% endif %}
    <div class="row align-center">
        <div class="col-xl-6 col-12">
            <p class="align-center">
                Vous avez quelque chose à vendre ?
            </p>
            <a class="btn btn-primary" href="{{ path('app_sell') }}">Vendre un objet</a>
        </div>
    </div>
    <div class="row align-left mt-m">
        <div class="col-12">
            <div>
                <span class="align-left h5">
                    Dernières annonces déposées dans nos catégories :
                </span>
            </div>
            {% for category in categories %}
            <div class="category">
                    <h3>{{ category.libelle }}</h3>
                    <div class="list">
                        {% for annonce in category.getAnnonces() %}
                            {% include ('annonce/annonce-sm.html.twig') %}
                        {% endfor %}
                    </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}