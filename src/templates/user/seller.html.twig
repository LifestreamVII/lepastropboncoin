{% extends "layout.html.twig" %}

{% block title %}Profil de {{ user.username }}{% endblock %}

{% block content %}
    {% if user is not null %}
        <h1>Profil de {{ user.username }}</h1>
    {% endif %}
    <div class="row align-center">
        <div class="col-xl-6 col-12">
            <p class="align-center mb-none">
                Ce vendeur a {{ annonces|length }} annonces en ligne.
            </p>
            <p class="align-center mt-none">
                Score de {{ rating[1] }}% - {{ rating[0] }} évaluation(s)
            </p>
            <div>
                <a class="btn btn-primary" href="{{ path('app_vote_add', { 'id': user.id }) }}">Évaluer</a>
            </div>
        </div>
    </div>
    <div class="row align-left mt-m">
        <div class="col-12">
            <div>
                <span class="align-left h5">
                    Annonces de {{ user.username }} :
                </span>
            </div>
            <div class="list">
                {% for annonce in annonces %}
                        {% include ('annonce/annonce-sm.html.twig') %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}